@model LoginPanel.Models.VendorProductPricingCombinedModel

<h3 class="text-center mb-3">VENDOR PRODUCT PRICING</h3>

<div class="card shadow-sm p-4 mb-4 border-primary">
    <div class="row g-3">
        
        <div class="col-md-4">
            <label class="form-label fw-semibold">Vendor</label>
            <select id="VendorId" class="form-select">
                <option value="">-- Select Vendor --</option>
                @foreach (var v in Model.VendorList)
                {
                    <option value="@v.VendorId">@v.VendorName</option>
                }
            </select>
        </div>

        
        <div class="col-md-4">
            <label class="form-label fw-semibold">Product</label>
            <select id="ProductId" class="form-select">
                <option value="">-- Select Product --</option>
                @foreach (var p in Model.ProductList)
                {
                    <option value="@p.ProductId" data-price="@p.ProductPrice">@p.ProductName</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label fw-semibold">Price</label>
            <div class="input-group">
                <span class="input-group-text">₹</span>
                <input type="number" id="Price" class="form-control" placeholder="Enter Vendor Price" />
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-2">
            <button class="btn btn-success w-100 fw-semibold" onclick="saveVendorProductPrice()">
                Save
            </button>
        </div>
    </div>
</div>

<hr />

<!-- 🔹 Vendor Product Pricing Table -->
<div id="pricingList" class="table-responsive" style="max-height:450px; overflow-y:auto;">
    @await Html.PartialAsync("PrtVendorPricingList", Model.VendorProductPrices)
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script>
        // Auto fill product price
        document.getElementById("ProductId").addEventListener("change", function () {
            let price = this.options[this.selectedIndex].getAttribute("data-price");
            document.getElementById("Price").value = price || "";
        });

        // Save Vendor Product Price
        function saveVendorProductPrice() {
            let data = {
                VendorId: document.getElementById("VendorId").value,
                 ProductId: document.getElementById("ProductId").value,
                Price: document.getElementById("Price").value
            
            };

            if (!data.VendorId || !data.ProductId || !data.Price) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Required',
                    text: 'Please select Vendor, Product and Price'
                });
                return;
            }

            fetch('/VendorProductPricing/Save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => res.json())
            .then(result => {
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Saved!',
                        text: 'Vendor product price saved successfully',
                        timer: 2000,
                        showConfirmButton: false
                    });

                    document.getElementById("Price").value = "";
                    loadPricingList();
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed',
                        text: 'Save failed, please try again'
                    });
                }
            });
        }

        // Load Pricing List
        function loadPricingList() {
            fetch('/VendorProductPricing/PrtVendorPricingList', { method: 'POST' })
                .then(res => res.text())
                .then(html => {
                    document.getElementById("pricingList").innerHTML = html;
                });
        }

        //  Price History Popup
        function viewPriceHistory(vendorId, productId) {
            fetch(`/VendorProductPricing/HistoryPopup?vendorId=${vendorId}&productId=${productId}`)
                .then(res => res.text())
                .then(html => {
                    Swal.fire({
                        title: 'Price History',
                        html: `<div style="max-height:400px; overflow-y:auto;">${html}</div>`,
                        width: '700px',
                        showCloseButton: true,
                        showConfirmButton: false,
                        customClass: { popup: 'swal2-border-radius' }
                    });
                });
        }
    </script>
}
