@{
    ViewBag.Title = "Support";
    Layout = "~/Views/Shared/ShopLayout.cshtml";
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="p-4 bg-white border rounded-4 shadow-sm">
            <h3 class="fw-bold mb-2">Support Center</h3>
            <p class="text-muted mb-4">Help with orders, delivery, returns and account.</p>

            <div class="accordion" id="faq">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#q1">
                            How do I place an order?
                        </button>
                    </h2>
                    <div id="q1" class="accordion-collapse collapse show" data-bs-parent="#faq">
                        <div class="accordion-body text-muted small">
                            Open a product → choose Buy Now / Add to Cart → confirm on payment page.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q2">
                            Why does a product show “Out of Stock”?
                        </button>
                    </h2>
                    <div id="q2" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body text-muted small">
                            Stock is calculated from Inventory (IsCurrent=1). If quantity is 0, it becomes out of stock.
                        </div>
                    </div>
                </div>

                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#q3">
                            Where can I see my orders?
                        </button>
                    </h2>
                    <div id="q3" class="accordion-collapse collapse" data-bs-parent="#faq">
                        <div class="accordion-body text-muted small">
                            Go to My Orders from the user dropdown (top-right) after login.
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4" />
            <a class="btn btn-outline-dark" href="@Url.Action("Index", "Shop")">
                <i class="bi bi-arrow-left me-1"></i> Back to Products
            </a>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="p-4 bg-white border rounded-4 shadow-sm">
            <div class="fw-bold mb-2">Contact</div>
            <div class="text-muted small">
                <div class="mb-2"><i class="bi bi-envelope me-2"></i> support@example.com</div>
                <div class="mb-2"><i class="bi bi-telephone me-2"></i> +91 95809 87041</div>
                <div><i class="bi bi-geo-alt me-2"></i> India</div>
            </div>

            <hr class="my-3" />

            <div class="fw-bold mb-2">Working Hours</div>
            <div class="text-muted small">Mon–Sat, 10:00 AM – 7:00 PM</div>
        </div>
    </div>
</div>
