@{
    ViewBag.Title = "Offers";
    Layout = "~/Views/Shared/ShopLayout.cshtml";
}

<div class="p-4 bg-white border rounded-4 shadow-sm">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div>
            <h3 class="fw-bold mb-1">Offers & Deals</h3>
            <div class="text-muted">Discounts and bundles (demo content).</div>
        </div>
        <a class="btn btn-dark" href="@Url.Action("Index", "Shop")">
            <i class="bi bi-bag me-1"></i> Shop Now
        </a>
    </div>

    <hr class="my-4" />

    <div class="row g-3">
        <div class="col-md-4">
            <div class="border rounded-4 p-3 h-100">
                <div class="badge text-bg-success mb-2">SAVE 10%</div>
                <div class="fw-semibold">Electronics Week</div>
                <div class="text-muted small">Selected mobiles & laptops.</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="border rounded-4 p-3 h-100">
                <div class="badge text-bg-warning mb-2">CASHBACK</div>
                <div class="fw-semibold">Wallet Cashback</div>
                <div class="text-muted small">Demo offer for training UI.</div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="border rounded-4 p-3 h-100">
                <div class="badge text-bg-primary mb-2">BUNDLE</div>
                <div class="fw-semibold">Accessory Combos</div>
                <div class="text-muted small">Chargers + cables bundles.</div>
            </div>
        </div>
    </div>

    <div class="alert alert-light border mt-4 mb-0 text-muted small">
        Tip: Later you can load offers from DB using an Offers table or product tags.
    </div>
</div>
