@model LoginPanel.Models.InventoryCorrectionVM

@{
    ViewBag.Title = "Inventory Correction";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5>Inventory Quantity Correction</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Product</label>
                        @Html.DropDownListFor(m => m.ProductId, Model.ProductList, "-- Select Product --", new { @class = "form-select", id = "ProductId" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Quantity</label>
                        <input type="number" id="NewQuantity" class="form-control" placeholder="Enter correct quantity" />
                    </div>
                    <div class="text-end">
                        <button type="button" class="btn btn-success" onclick="submitCorrection()">✔ Submit Correction</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function submitCorrection() {
        const productId = $("#ProductId").val();
        const newQty = $("#NewQuantity").val();
        if (!productId || productId == 0) { Swal.fire("Validation Error","Please select a product","warning"); return; }
        if (!newQty || newQty < 0) { Swal.fire("Validation Error","Please enter valid quantity","warning"); return; }

        $.ajax({
            url: '@Url.Action("CorrectInventory", "Inventory")',
            type: 'POST',
            data: { ProductId: productId, NewQuantity: newQty, ReasonId: 1 },
            success: function(res) {
                if (res.success) {
                    Swal.fire("Success ✔", res.message,"success");
                    $("#NewQuantity").val(""); $("#ProductId").val("");
                } else {
                    Swal.fire("Error ❌", res.message,"error");
                }
            },
            error: function(xhr,status,error) {
                Swal.fire("Error ❌", "Something went wrong: "+xhr.status+" "+xhr.statusText,"error");
            }
        });
    }
</script>
